                    container2.html(`<h6 class="mb-0"><i class="fa-solid fa-sack-dollar"></i> <h7 class="price">${data.newPrice}.0000</h7></h6>`);
                    totalChange();
                }
            });
            // console.log($(this));
            // console.log(container);
            // console.log(idProduct);
        });


