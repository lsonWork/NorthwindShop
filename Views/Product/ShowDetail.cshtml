                                <li><a href="#">Jobs</a></li>
                                <li><a href="#">Our team</a></li>
                                <li><a href="#">Leadership</a></li>
                                <li><a href="#">Privacy Policy</a></li>
                            </ul>
                        </div>

                        <div class="col-6 col-sm-6 col-md-3">
                            <ul class="list-unstyled">
                                <li><a href="#">Nordic Chair</a></li>
                                <li><a href="#">Kruzo Aero</a></li>
                                <li><a href="#">Ergonomic Chair</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </footer>
    <!-- End Footer Section -->

    <script>
        function addToCartSuccess2() {
            Swal.fire({
                title: "Add to cart",
                icon: "success",
                width: 600,
                padding: "3em",
                color: "#716add",
                background: "#fff",
                backdrop: `
                                rgba(14,69,114,0.6)
                                url("/images/nyan-cat.gif")
                                left top
                                no-repeat
                              `
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("formCart").submit();
                }
            });

        }
        function checkToCart(event) {
            event.preventDefault();
            var quantity = document.getElementById("inputQuantity").value;
            console.log(@ViewBag.detailProduct.UnitsInStock);
            if (quantity > 0 && quantity <= @ViewBag.detailProduct.UnitsInStock) {
                console.log(true);
                addToCartSuccess2();
                return true;
            } else {
                console.log(false);
                document.getElementById("msgErrQuantity").innerHTML = "Invalid quantity";
                return false;
            }
        }
    </script>
    <script src="~/jsProduct/bootstrap.bundle.min.js"></script>
    <script src="~/jsProduct/tiny-slider.js"></script>
    <script src="~/jsProduct/custom.js"></script>
</body>

</html>
